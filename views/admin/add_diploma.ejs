<%- include('../_layouts/adminheader') %>

<h2 class="page-title"> Add a diploma</h2>
<a href="/admin/diplomas" class="btn btn-primary">Back to all diplomas</a>
<br><br>

<form method="post" action="/admin/diplomas/add-diploma" enctype="multipart/form-data">
    <div class="form-group">
        <label for="">Diploma Degree</label>
        <input type="text" class="form-control" name="degree" value="<%= degree %>" placeholder="Degree">
    </div>

    <div class="form-group">
        <label for="">lastName</label>
        <textarea name="lastName" class="form-control" cols="30" placeholder="lastName"><%= lastName %></textarea>
    </div>

    <div class="form-group">
        <label for="">firstName</label>
        <textarea name="firstName" class="form-control" cols="30"  placeholder="firstName"><%= firstName %></textarea>
    </div>

    <div class="form-group">
        <label for="">city</label>
        <textarea name="city" class="form-control" cols="30" placeholder="city"><%= city %></textarea>
    </div>

    <div class="form-group">
        <label for="">Category</label>
        <select name="category" class="form-control">
            <% categories.forEach(function(cat) {%>
                <option value="<%= cat.slug %>"><%= cat.title %></option>
            <% });%>
        </select>
    </div>

    <div class="form-group">
        <label for="">Description</label>
        <textarea name="desc" class="form-control" cols="30" placeholder="Description"><%= desc %></textarea>
    </div>

    <div class="form-group">
        <label for="">Document</label>
        <input type="file" class="form-control" name="document" id="document">
        <img src="#" id="imgPreview" alt="">
    </div>

    <button class="btn btn-default"> Submit</button>
</form>

<script>
    function readURL(input) {
        if (input.files && input.files[0]){
            var reader = new FileReader();

            reader.onload = function(e) {
                $("#imgPreview").attr('src', e.target.result).width(100).height(100);
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

    $("#document").change(function(){
        readURL(this);
    });
</script>

<%- include('../_layouts/adminfooter') %>